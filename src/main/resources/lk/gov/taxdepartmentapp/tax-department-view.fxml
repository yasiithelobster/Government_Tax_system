<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.gov.taxdepartmentapp.TaxDepartmentController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <TextField fx:id="filePathField" promptText="Enter file path here" />
        <Button fx:id="importPathButton" onAction="#onImportPathButtonClick" text="Import from Path" />
        <TableView fx:id="tableView" prefHeight="300.0" prefWidth="600.0" />
        <Label fx:id="summaryLabel" prefHeight="107.0" prefWidth="625.0">
         <font>
            <Font size="18.0" />
         </font></Label>
        <Button mnemonicParsing="false" onAction="#onValidateButtonClick" text="Validate Transactions" />
        <Button mnemonicParsing="false" onAction="#onDeleteInvalidButtonClick" text="Delete Invalid Transactions" />
        <Button mnemonicParsing="false" onAction="#onDeleteZeroProfitButtonClick" text="Delete Zero Profit Transactions" />
        <Label text="Tax Rate (%):" />
        <TextField fx:id="taxRateField" prefHeight="26.0" prefWidth="191.0" />
        <Button mnemonicParsing="false" onAction="#onCalculateTaxButtonClick" text="Calculate Final Tax" />
        <Label fx:id="finalTaxLabel" prefHeight="26.0" prefWidth="227.0" text="Final Tax">
         <font>
            <Font size="20.0" />
         </font></Label>
    </children>
</VBox>
